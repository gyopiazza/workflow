{
  "name": "workflow",
  "version": "1.0.0",
  "description": "An advanced workflow setup for frontend projects.",
  "author": "Gyo Piazza <gyopiazza@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gyopiazza/workflow"
  },
  "todo": [
    "Change sprite.js so that it saves the SCSS in the src dir before the compilation, and the HTML somewhere else"
  ],
  "scripts": {
    "clean": "rm -f dist/{css/*,js/*,img/*}",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "lint": "eslint src/js",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin src/img/* -o dist/img",
    "sprite": "node scripts/sprite.js",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "copyright": "node scripts/copyright-banner.js",
    "watch:css": "onchange \"src/scss\" -- npm run build:css",
    "watch:js": "onchange \"src/js\" -- npm run build:js",
    "watch:images": "onchange \"src/img\" -- npm run build:images",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:images",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "./node_modules/.bin/webpack",
    "build:images": "npm run sprite && npm run imagemin",
    "build:clean": "npm run clean && npm run build:all",
    "build:all": "npm run build:css && npm run build:js && npm run build:images",
    "build:prod": "TODO: BUILD FOR PRODUCTION (images compression, copyright-banner go here...)",
    "test:unit": "./node_modules/.bin/mocha tests/unit",
    "test:integration": "./node_modules/.bin/mocha tests/integration",
    "test:visual": "./node_modules/.bin/backstop test",
    "test:visual:ref": "./node_modules/.bin/backstop reference",
    "docs": "jsdoc src/js -r -d docs",
    "styleguide": "./node_modules/.bin/documentjs",
    "postinstall": "npm run build:all && npm run watch:all"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "backstopjs": "^2.0.6",
    "browser-sync": "^2.12.8",
    "chai": "^3.5.0",
    "documentjs": "^0.4.4",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.1",
    "eslint-loader": "^1.6.0",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "jsdoc": "^3.4.2",
    "mocha": "^3.1.2",
    "node-sass": "^3.7.0",
    "npm-build-tools": "^2.2.5",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.5.2",
    "request": "^2.76.0",
    "should": "^11.1.1",
    "svg-sprite": "^1.3.6",
    "svgo": "^0.7.1",
    "uglify-js": "^2.6.2",
    "webpack": "^1.13.3"
  }
}
